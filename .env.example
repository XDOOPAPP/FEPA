# ========== API Configuration ==========
# Base URL cho API server (đầy đủ endpoint)
# Development: http://76.13.21.84:3000/api/v1
# Staging: https://staging-api.fepa.com/api/v1
# Production: https://api.fepa.com/api/v1
VITE_API_BASE_URL=http://76.13.21.84:3000/api/v1

# Socket.IO URL (cho real-time notifications)
# Development: http://76.13.21.84:3000
# Production: https://api.fepa.com
VITE_SOCKET_URL=http://76.13.21.84:3000

# API timeout (milliseconds)
VITE_API_TIMEOUT=10000

# ========== Environment ==========
# Environment: development | staging | production
VITE_APP_ENV=development

# App version
VITE_APP_VERSION=1.0.0

# Enable debug mode (show console logs, devtools)
VITE_DEBUG=true

# ========== Feature Flags ==========
# Enable Socket.IO real-time features
VITE_ENABLE_SOCKET=true

# Enable mock data (for testing without backend)
VITE_ENABLE_MOCK_DATA=false

# Enable React Query DevTools
VITE_ENABLE_QUERY_DEVTOOLS=true

# Enable bundle analyzer
VITE_ENABLE_BUNDLE_ANALYZER=false

# ========== Security ==========
# Enable CSRF protection
VITE_ENABLE_CSRF=true

# Enable XSS protection
VITE_ENABLE_XSS_PROTECTION=true

# ========== UI Configuration ==========
# Default page size for pagination
VITE_DEFAULT_PAGE_SIZE=10

# Max file upload size (MB)
VITE_MAX_FILE_SIZE=10

# Date/time format
VITE_DATE_FORMAT=DD/MM/YYYY
VITE_TIME_FORMAT=HH:mm:ss

# ========== Storage ==========
# localStorage prefix
VITE_STORAGE_PREFIX=fepa_admin_

# Session timeout (minutes)
VITE_SESSION_TIMEOUT=30

# ========== Analytics & Monitoring (Optional) ==========
# Google Analytics ID
VITE_GA_ID=

# Sentry DSN for error tracking
VITE_SENTRY_DSN=

