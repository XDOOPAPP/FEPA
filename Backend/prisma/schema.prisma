// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String         @id @default(uuid())
  email             String         @unique
  phone             String?        @unique
  passwordHash      String
  fullName          String
  avatarUrl         String?
  role              Role           @default(USER)
  twoFactorEnabled  Boolean        @default(false)

  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt

  profile           UserProfile?
  expenses          Expense[]
  receipts          Receipt[]
  budgets           Budget[]
  savingGoals       SavingGoal[]
  debts             Debt[]
  subscriptions     Subscription[]
  notifications     Notification[]
}

enum Role {
  USER
  ADMIN
  PARTNER
}


model UserProfile {
  id            String    @id @default(uuid())
  userId        String    @unique
  user          User      @relation(fields: [userId], references: [id])

  age           Int?
  gender        Gender?
  occupation    String?
  monthlyIncome Float?
  location      String?

  createdAt     DateTime  @default(now())
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

model Category {
  id        String       @id @default(uuid())
  name      String
  type      CategoryType
  icon      String?

  parentId  String?
  parent    Category?    @relation("SubCategories", fields: [parentId], references: [id])
  children  Category[]   @relation("SubCategories")

  expenses  Expense[]
}

enum CategoryType {
  EXPENSE
  INCOME
}

model Expense {
  id            String        @id @default(uuid())
  userId        String
  categoryId    String?
  amount        Float
  currency      String        @default("VND")
  description   String?
  paymentMethod PaymentMethod @default(CASH)
  source        ExpenseSource @default(MANUAL)
  date          DateTime

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  user          User          @relation(fields: [userId], references: [id])
  category      Category?     @relation(fields: [categoryId], references: [id])
  receipt       Receipt?
}

enum PaymentMethod {
  CASH
  BANK
  EWALLET
  OTHER
}

enum ExpenseSource {
  MANUAL
  OCR
  VOICE
  CHAT
}

model Receipt {
  id            String   @id @default(uuid())
  userId        String
  imageUrl      String
  merchantName  String?
  ocrRawText    String?

  expenseId     String?   @unique
  expense       Expense?  @relation(fields: [expenseId], references: [id])

  scannedAt     DateTime  @default(now())

  user          User      @relation(fields: [userId], references: [id])
}

model Budget {
  id           String      @id @default(uuid())
  userId       String
  categoryId   String
  limitAmount  Float
  period       BudgetPeriod
  startDate    DateTime
  endDate      DateTime

  createdAt    DateTime    @default(now())

  user         User        @relation(fields: [userId], references: [id])
  category     Category    @relation(fields: [categoryId], references: [id])
}

enum BudgetPeriod {
  MONTHLY
  WEEKLY
  CUSTOM
}


model SavingGoal {
  id            String       @id @default(uuid())
  userId        String
  name          String
  targetAmount  Float
  currentAmount Float        @default(0)
  deadline      DateTime?
  status        GoalStatus   @default(ACTIVE)

  user          User         @relation(fields: [userId], references: [id])
}

enum GoalStatus {
  ACTIVE
  COMPLETED
  FAILED
}

model Debt {
  id        String    @id @default(uuid())
  userId    String
  debtor    String
  amount    Float
  type      DebtType
  note      String?
  dueDate   DateTime?
  createdAt DateTime  @default(now())

  user      User      @relation(fields: [userId], references: [id])
}

enum DebtType {
  BORROW
  LEND
}


model Subscription {
  id         String   @id @default(uuid())
  userId     String
  planId     String
  startDate  DateTime
  endDate    DateTime
  isActive   Boolean  @default(true)

  user       User     @relation(fields: [userId], references: [id])
  plan       Plan     @relation(fields: [planId], references: [id])
}

model Plan {
  id          String   @id @default(uuid())
  name        String
  price       Float
  description String?

  subscriptions Subscription[]
}


model Blog {
  id         String   @id @default(uuid())
  adminId    String
  title      String
  content    String
  thumbnail  String?
  createdAt  DateTime @default(now())

  admin      User     @relation(fields: [adminId], references: [id])
}

model Advertisement {
  id         String      @id @default(uuid())
  partnerId  String
  bannerUrl  String
  type       AdType
  startDate  DateTime
  endDate    DateTime

  partner    User        @relation(fields: [partnerId], references: [id])
}

enum AdType {
  BANNER
  CONTRACT
}

model Notification {
  id        String    @id @default(uuid())
  userId    String
  title     String
  body      String
  read      Boolean   @default(false)
  createdAt DateTime  @default(now())

  user      User      @relation(fields: [userId], references: [id])
}
// AI TABLES
model ExpensePrediction {
  id              String   @id @default(uuid())
  userId          String
  predictedFor    DateTime
  predictedAmount Float
  modelVersion    String?

  user            User     @relation(fields: [userId], references: [id])
}

model Anomaly {
  id           String   @id @default(uuid())
  userId       String
  expenseId    String
  anomalyScore Float
  message      String?
  detectedAt   DateTime @default(now())

  user         User     @relation(fields: [userId], references: [id])
  expense      Expense  @relation(fields: [expenseId], references: [id])
}
//

model ExchangeRate {
  id         String   @id @default(uuid())
  currency   String
  rateToVnd  Float
  updatedAt  DateTime @default(now())
}
